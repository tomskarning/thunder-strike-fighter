<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- default pressed -->
	<item android:state_checked="false" android:state_pressed="true">
		<layer-list>
            <item android:drawable="@drawable/play" android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp" />
        </layer-list>
	</item>
	
	<!-- checked pressed -->
	<item android:state_checked="true" android:state_pressed="true">
		<layer-list>
            <item android:drawable="@drawable/pause" android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp" />
        </layer-list>
	</item>
	
	<!-- checked -->
    <item android:state_checked="true" android:drawable="@drawable/pause"/>
    
    <!-- default -->
    <item android:drawable="@drawable/play" />
    
</selector>